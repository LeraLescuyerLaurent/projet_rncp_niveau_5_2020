{% extends 'administration.html.twig' %}

{% block title %}Tips and News | Login{% endblock %}

{% block body %}
<div class="row">
    <section class="contentAdmin  col-15 col-m-15 col-l-15 col-xl-15   col-push-1 col-m-push-1 col-l-push-1 col-xl-push-1">
        {% include "/element/_flash_messages.html.twig" %}
        <h1>Connexion</h1>
        <div class="row">
            <form name="registration" method="post" class="col-13 col-m-13 col-l-10 col-xl-10">
                <div>
                    <label for="email" class="required">Adresse Email</label>
                    <input type="email" 
                    id="email"
                    name="email" 
                    required="required" 
                    maxlength="255" 
                    placeholder="Entrer l'adresse Email ..." 
                    class="col-13 col-m-13 col-l-10 col-xl-10" 
                    value="{{ app.session.get(constant('App\\Controller\\SecurityController::LAST_EMAIL')) }}">
                </div>
                <div>
                    <label for="password" class="required">Mot de Passe</label>
                    <input type="password" id="password" name="password" required="required" placeholder="Entrer un mot de passe entre 12 et 50 caractÃ¨res ..." class="col-13 col-m-13 col-l-10 col-xl-10">
                </div>
                <div>
                    <label for="remember_me" >Garder ma session active</label>
                    <input type="checkbox" id="_remember_me" name="_remember_me"  >
                </div>
                <input type="hidden" name="csrf_token" value="{{ csrf_token('login_token') }}">
                <button class="uppercase primaire btn">Modifier</button>
        </form>
        </div>
    </section>  
</div> 
{% endblock %}
